<% project = data.projecten[owner] %>

<div class="wrapper-grey padded" style="background-color: #FFFFFF" id="projects">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8">
       <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active" id="rondje"></li>
          <% if project.picture2 != nil %>
         <li data-target="#myCarousel" data-slide-to="1" id="rondje"></li>
        <% end %>
        <% if project.picture3 != nil %>
          <li data-target="#myCarousel" data-slide-to="2" id="rondje"></li>
        <% end %>
          <% if project.picture4 != nil %>
          <li data-target="#myCarousel" data-slide-to="3" id="rondje"></li>
        <% end %>
          <% if project.picture5 != nil %>
          <li data-target="#myCarousel" data-slide-to="4" id="rondje"></li>
        <% end %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <div class="item active">
           <%= image_tag project.picture1 %>
         </div>
        <% if project.picture2 != nil %>
         <div class="item">
          <%= image_tag project.picture2 %>
        </div>
        <% end %>

        <% if project.picture3 != nil %>
         <div class="item">
          <%= image_tag project.picture3 %>
        </div>
        <% else %>
        <% end %>

       <% if project.picture4 != nil %>
         <div class="item">
          <%= image_tag project.picture4 %>
        </div>
        <% end %>

        <% if project.picture5 != nil %>
         <div class="item">
          <%= image_tag project.picture5 %>
        </div>
        <% end %>

      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-4">
    <p><%= project.title %></p>
    <p><%= project.date %></p>
    <p><%= project.description %></p>
    <p><%= project.concept %></p>
    <p><%= project.explanation %></p>
  </div>
</div>
</div>
</div>

